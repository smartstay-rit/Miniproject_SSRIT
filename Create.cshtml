
@{
    ViewBag.Title = "Verify";
    Layout = "~/Views/_LayoutPage1.cshtml"; 
}

<form id="form1" runat="server">
    <div >
         

        <h1>Student Registration</h1>


        <table class="auto-style1">
            <tr>
                <td>Studentid</td>
                <td>
                    <input type="text" name="Studentid" placeholder="Enter Student id" required="" />

                </td>

            </tr>



            <tr>

                <td>DOB </td>
                <td>


                    <label for="doc"></label>
                    <input type="date" id="doc" name="DOB">
                </td>


            </tr>

            <tr>
                <td>Address</td>
                <td>
                    <input type="text" name="Address" placeholder="Enter student DOB" required="" />
                </td>

            </tr>
            <tr>
                <td>Gender </td>
                <td>

                    <input type="checkbox" id="Gender" name="Gender" value="male">Male
                    <input type="checkbox" id="Gender" name="Gender" value="female">Female
                </td>

            </tr>

            <tr>
                <td>District </td>
                <td>
                    <label for="District"></label>

                    <select name="district" id="district">
                        <option value="Select">Select</option>
                        <option value="Idukki">Idukki</option>
                        <option value="Kottayam">Kottayam</option>
                        <option value="Alappuzha">Alappuzha</option>
                        <option value="Kollam">Idukki</option>
                        <option value="Pathanamthitta">Kottayam</option>
                        <option value="Alappuzha">Alappuzha</option>
                        <option value="Malappuram">Idukki</option>
                        <option value="Kannur">Kottayam</option>
                        <option value="Ernakulam">Alappuzha</option>
                        <option value="Thrissur">Idukki</option>
                        <option value="Kozhikode">Kottayam</option>
                        <option value="Wayanad">Alappuzha</option>
                        <option value="Palakkad">Idukki</option>
                        <option value="Kasargod">Kottayam</option>

                    </select>


                </td>

            </tr>



            <tr>
                <td>Pincode</td>
                <td>
                    <input type="text" name="pincode" placeholder="Enter Pincode" required="" />

                </td>

            </tr>
            <tr>
                <td>State</td>
                <td>
                    <label for="State"></label>

                    <select name="state" id="state">
                        <option value="Select">Select</option>
                        <option value="Kerala">Kerala</option>
                        <option value="Tamilnadu">Tamilnadu</option>
                        <option value="Karnataka">Karnataka</option>
                        <option value="Rajasthan">Rajasthan</option>
                        <option value="Assam">Assam</option>
                        <option value="Andrapradesh">Andrapradesh</option>
                        <option value="Utterpradesh">Utterpradesh</option>
                        <option value="Bihar">Bihar</option>
                        <option value="Sikkim">Sikkim</option>
                        <option value="Jarghand">Jarghand</option>
                        <option value="Punjab">Punjab</option>
                        <option value="Jammu & Kashmir">Jammu & Kashmir </option>
                        <option value="Gujarat">Gujarat</option>
                        <option value="Odisha">Odisha</option>

                    </select>

                </td>
            </tr>
            <tr>
                <td>Phone Number</td>
                <td>
                    <label for="MobileNumber"></label>
                    <input type="tel" id="MobileNumber" name="MobileNumber">

                </td>

            </tr>

            <tr>
                <td>Email</td>
                <td>
                    <label for="Email"></label>
                    <input type="email" id="Email" name="Email">

                </td>

            </tr>

            <tr>
                <td>Guardian Name</td>
                <td>
                    <input type="text" name="NameOfGuardian" required="" />

                </td>

            </tr>
            <tr>
                <td>Guardian Phone Number </td>
                <td>
                    <label for="MobileGuardian"></label>
                    <input type="tel" id="phone" name="MobileGuardian" >

                </td>

            </tr>

            <tr>
                <td>Guardian Address</td>
                <td>
                    <input type="text" name="AddressGuardian" required="" />

                </td>

            </tr>



            <tr>
                <td>Course </td>
                <td>
                    <label for="Course"></label>

                    <select name="department" id="department">
                        <option value="Select">Select</option>
                        <option value="MCA">MCA</option>
                        <option value="B.Tech">B.Tech</option>
                        <option value="M.Tech">M.Tech</option>

                    </select>

                </td>
            </tr>
            <tr>
                <td>Date Of Admission </td>
                <td>
                    <label for="DateOfAdmission"></label>
                    <input type="date" id="DateOfAdmission" name="DateOfAdmission">

                </td>

            </tr>
            <tr>
                <td>Date Of Completion</td>
                <td>
                    <label for="DateOfCompletion"></label>
                    <input type="date" id="DateOfCompletion" name="DateOfCompletion">

                </td>

            </tr>
            <tr>
                <td>Date Of Joining Hostel</td>
                <td>
                    <label for="DateOfJoiningHostel"></label>
                    <input type="date" id="DateOfJoiningHostel" name="DateOfJoiningHostel">

                </td>

            </tr>

            <tr>
                <td>Hostel Id</td>
                <td>
                    <input type="text" name="HostelId" required="" />

                </td>

            </tr>
            <tr>
                <td>
                    <input type="submit" value="Submit" class="btn btn-primary"/>
                </td>
            </tr>
        </table>




    </div>
</form>
@{ 
    if (TempData["msg"]!=null)
    {
        <script>

            alert('@TempData["msg"]')
        </script>

    }
}
